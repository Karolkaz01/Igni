<Window x:Class="Client.CommunicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.MVVM.ViewModels"
        mc:Ignorable="d"
        Title="ComunicationWindow" Height="500" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <local:CommunicationViewModel/>
    </Window.DataContext>

    <Grid>
        
        <Border Background="{StaticResource 12ColorTheme}" CornerRadius="10">

            <Label x:Name="RecognizedT" Background="Transparent" Foreground="White" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20"/>

        </Border>
        
    </Grid>
</Window>
